{
    "global": {
        "ask_for_confirmation_before_quitting": false,
        "show_in_menu_bar": false
    },
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "switch to 'vanila' profile",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "z",
                                    "modifiers": { "mandatory": ["left_shift", "option"] }
                                },
                                "to": [{ "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'empty'" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Caps Lock to Insert when Parallels or VMware is in focus",
                        "manipulators": [
                            {
                                "conditions": [
                                    {
                                        "bundle_identifiers": [
                                            "^com\\.parallels\\..+$",
                                            "^com\\.vmware\\..+$"
                                        ],
                                        "type": "frontmost_application_if"
                                    }
                                ],
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [{ "key_code": "insert" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "main",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        },
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "switch to 'main' profile",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "z",
                                    "modifiers": { "mandatory": ["left_shift", "option"] }
                                },
                                "to": [{ "shell_command": "'/Library/Application Support/org.pqrs/Karabiner-Elements/bin/karabiner_cli' --select-profile 'main'" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "empty",
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}